<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/libraryBack"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/icon_back"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:id="@+id/libraryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="50dp"
                android:layout_toRightOf="@id/libraryBack"
                android:text="@string/yourFaces"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/libraryNextPage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/libraryPreviousPage"
                android:layout_marginVertical="10dp"
                android:src="@drawable/icon_forward"/>

            <ImageView
                android:id="@+id/libraryPreviousPage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginVertical="10dp"
                android:layout_toRightOf="@id/libraryText"
                android:src="@drawable/icon_back" />

            <ImageView
                android:id="@+id/libraryImage0"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_below = "@id/libraryText"
                android:layout_alignParentLeft="true"
                />

            <ImageView
                android:id="@+id/libraryImage1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_below = "@id/libraryText"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/libraryImage2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/libraryImage0"
                android:layout_alignParentLeft="true"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/libraryImage3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_below = "@+id/libraryImage1"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/libraryImage4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_below = "@+id/libraryImage2"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/libraryImage5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_below = "@+id/libraryImage3"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/libraryImage6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_below = "@+id/libraryImage4"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/libraryImage7"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_below = "@+id/libraryImage5"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/libraryImage8"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_below = "@+id/libraryImage6"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/libraryImage9"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_below = "@+id/libraryImage7"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>